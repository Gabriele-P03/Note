<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#444477">

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/showMenuButton"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View style="@style/Divider"
        android:id="@+id/dividerMain"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/showMenuButton"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/textview_radius"
        app:layout_constraintTop_toTopOf="@id/dividerMain"
        app:layout_constraintBottom_toBottomOf="@id/timeScheduled"/>

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:gravity="center"
        android:text="NESSUNA "
        app:layout_constraintTop_toTopOf="@id/topView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/timeScheduled"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="Orario schedulato:"
        app:layout_constraintTop_toBottomOf="@id/titleMain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/descriptionMain"
        android:background="@drawable/textview_radius"
        android:backgroundTint="#aaaaaa"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/timeScheduled"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>